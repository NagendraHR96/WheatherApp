<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".WeatherDisplayActivity">

    <data>
        <variable
            name="weather"
            type="com.example.wheatherapp.model.WeatherResult" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textSize="50sp" />
        <ImageView
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/background_image"
            android:layout_width="48dp"
            bind:icon="@{weather.icon}"
            android:layout_height="48dp">
        </ImageView>
    </LinearLayout>

    <TextView
        android:textSize="25sp"
        android:id="@+id/description"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:elevation="2dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="2dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/today"
                android:text="@string/today"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_weight="1"
                android:textColor="@color/white"
                android:id="@+id/tod_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:textColor="@color/white"
            android:id="@+id/tomorrow"
            android:text="@string/tomorrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_weight="1"
            android:textColor="@color/white"
            android:id="@+id/tom_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
      <LinearLayout
          android:layout_margin="10dp"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content">
          <TextView
              android:layout_weight="1"
              android:textColor="@color/white"
              android:id="@+id/week"
              android:text="Mon"
              android:layout_width="0dp"
              android:layout_height="wrap_content">
          </TextView>

          <TextView
              android:layout_weight="1"
              android:textColor="@color/white"
              android:id="@+id/week_temp"
              android:layout_width="0dp"
              android:layout_height="wrap_content">
          </TextView>
      </LinearLayout>

                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/next_4_days_forecost"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>